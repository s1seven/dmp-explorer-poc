{
  "name": "@receiver-product/source",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "start:frontend:dev": "nx run frontend:serve:development",
    "start:backend:dev": "nx run backend:serve:development",
    "lint": "nx run-many --target=lint --all",
    "build": "nx run-many --target=build --projects=frontend,backend",
    "build:all": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "ng:component": "npx nx generate @nx/angular:component",
    "ng:lib": "nx generate @nx/angular:library",
    "lint:fix": "npx eslint --ext .ts --fix",
    "prettier": "npx prettier --write .",
    "format": "npm run prettier && npm run lint:fix",
    "start:docker": "docker-compose up -d",
    "stop:docker": "docker-compose down",
    "openapi:ng-extract": "node tools/openapi/extract-api.js",
    "heroku-postbuild": "npm run openapi:ng-extract && npm run build && npm run typeorm:build-config",
    "typeorm:build-config": "npx tsc apps/backend/typeorm.config.ts --outDir ./dist",
    "typeorm:generate-migrations": "npx typeorm -d dist/typeorm.config.js migration:generate",
    "typeorm:run-migrations": "npx typeorm -d dist/typeorm.config.js migration:run"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~17.3.0",
    "@angular/common": "~17.3.0",
    "@angular/compiler": "~17.3.0",
    "@angular/core": "~17.3.0",
    "@angular/forms": "~17.3.0",
    "@angular/platform-browser": "~17.3.0",
    "@angular/platform-browser-dynamic": "~17.3.0",
    "@angular/router": "~17.3.0",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^3.2.1",
    "@nestjs/core": "^10.0.2",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "auth0": "^4.3.1",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "jwks-rsa": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ts-mixer": "^6.0.4",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.20",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~17.3.0",
    "@angular-devkit/core": "~17.3.0",
    "@angular-devkit/schematics": "~17.3.0",
    "@angular-eslint/eslint-plugin": "~17.3.0",
    "@angular-eslint/eslint-plugin-template": "~17.3.0",
    "@angular-eslint/template-parser": "~17.3.0",
    "@angular/cli": "~17.3.0",
    "@angular/compiler-cli": "~17.3.0",
    "@angular/language-service": "~17.3.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/angular": "^18.2.1",
    "@nx/eslint": "18.2.1",
    "@nx/eslint-plugin": "18.2.1",
    "@nx/jest": "18.2.1",
    "@nx/js": "18.2.1",
    "@nx/nest": "18.2.1",
    "@nx/node": "18.2.1",
    "@nx/web": "18.2.1",
    "@nx/webpack": "18.2.1",
    "@nx/workspace": "18.2.1",
    "@schematics/angular": "~17.3.0",
    "@swc-node/register": "~1.8.0",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@types/jest": "^29.4.0",
    "@types/node": "~18.16.9",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-environment-node": "^29.4.1",
    "jest-preset-angular": "~14.0.3",
    "nx": "18.2.1",
    "postcss": "^8.4.5",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.4.2",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write --ignore-unknown",
      "git add"
    ]
  }
}
